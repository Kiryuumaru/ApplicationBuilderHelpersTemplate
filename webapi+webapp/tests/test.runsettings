<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <!-- Hard timeout for the entire test session (5 minutes) -->
    <TestSessionTimeout>300000</TestSessionTimeout>
    
    <!-- Run tests in parallel -->
    <MaxCpuCount>0</MaxCpuCount>
    
    <!-- Blame mode helps identify hanging tests -->
    <CollectDumpOnTestSessionHang>true</CollectDumpOnTestSessionHang>
    <TestSessionHangTimeout>180000</TestSessionHangTimeout>
  </RunConfiguration>
  
  <!-- xUnit specific settings -->
  <xUnit>
    <MaxParallelThreads>0</MaxParallelThreads>
    <ParallelizeAssembly>true</ParallelizeAssembly>
    <ParallelizeTestCollections>true</ParallelizeTestCollections>
  </xUnit>
</RunSettings>
