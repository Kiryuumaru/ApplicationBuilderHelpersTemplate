<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

	<PropertyGroup>
		<LangVersion>14</LangVersion>
		<GenerateBuildConstants>true</GenerateBuildConstants>
		<BaseCommandType>Presentation.WebApp.Commands.BaseWebAppCommand</BaseCommandType>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<InvariantGlobalization>true</InvariantGlobalization>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
		<StaticWebAssetProjectMode>Default</StaticWebAssetProjectMode>
		<BlazorDisableThrowNavigationException>true</BlazorDisableThrowNavigationException>
		<WasmBuildNative>true</WasmBuildNative>
	</PropertyGroup>

	<PropertyGroup>
		<Copyright>Copyright (C) 2025 Sample</Copyright>
		<Company>Sample Company</Company>
		<AssemblyTitle>Application Builder Helpers Template WebApp Client</AssemblyTitle>
		<AssemblyName>sampleapp.client</AssemblyName>
		<Description>Blazor WebAssembly client for Application Builder Helpers Template.</Description>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.2" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="10.0.2" />
		<PackageReference Include="Microsoft.Extensions.Http" Version="10.0.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Application.Client\Application.Client.csproj" />
		<ProjectReference Include="..\Infrastructure.EFCore.LocalStore\Infrastructure.EFCore.LocalStore.csproj" />
		<ProjectReference Include="..\Infrastructure.EFCore.Sqlite.Client\Infrastructure.EFCore.Sqlite.Client.csproj" />
		<ProjectReference Include="..\Presentation.WebApp\Presentation.WebApp.csproj" />
	</ItemGroup>

	<Target Name="BuildTailwindCss" BeforeTargets="Build">
		<Exec Command="npm install" WorkingDirectory="$(MSBuildProjectDirectory)" Condition="!Exists('$(MSBuildProjectDirectory)\node_modules')" />
		<Exec Command="npm run tailwind:build" WorkingDirectory="$(MSBuildProjectDirectory)" />
	</Target>

</Project>
