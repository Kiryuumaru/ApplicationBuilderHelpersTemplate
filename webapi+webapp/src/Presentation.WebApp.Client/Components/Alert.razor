@if (!string.IsNullOrEmpty(Message))
{
    <div class="@AlertClass" role="alert">
        <div class="flex items-center">
            @if (!string.IsNullOrEmpty(Icon))
            {
                <svg class="shrink-0 w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                    @((MarkupString)Icon)
                </svg>
            }
            <span class="font-medium">@Title</span>
            <span class="ms-1">@Message</span>
        </div>
        @if (Dismissible)
        {
            <button type="button" class="@DismissButtonClass" @onclick="OnDismiss" aria-label="Close">
                <span class="sr-only">Dismiss</span>
                <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                </svg>
            </button>
        }
    </div>
}

@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public AlertType Type { get; set; } = AlertType.Info;

    [Parameter]
    public bool Dismissible { get; set; } = false;

    [Parameter]
    public EventCallback OnDismissed { get; set; }

    private async Task OnDismiss()
    {
        Message = null;
        await OnDismissed.InvokeAsync();
    }

    private string AlertClass => Type switch
    {
        AlertType.Success => "flex items-center p-4 mb-4 text-sm text-success-800 rounded-lg bg-success-50 border border-success-200 dark:bg-success-950 dark:text-success-300 dark:border-success-800",
        AlertType.Error => "flex items-center p-4 mb-4 text-sm text-error-800 rounded-lg bg-error-50 border border-error-200 dark:bg-error-950 dark:text-error-300 dark:border-error-800",
        AlertType.Warning => "flex items-center p-4 mb-4 text-sm text-warning-800 rounded-lg bg-warning-50 border border-warning-200 dark:bg-warning-950 dark:text-warning-300 dark:border-warning-800",
        _ => "flex items-center p-4 mb-4 text-sm text-info-800 rounded-lg bg-info-50 border border-info-200 dark:bg-info-950 dark:text-info-300 dark:border-info-800"
    };

    private string DismissButtonClass => Type switch
    {
        AlertType.Success => "ms-auto -mx-1.5 -my-1.5 bg-success-50 text-success-600 rounded-lg focus:ring-2 focus:ring-success-400 p-1.5 hover:bg-success-100 inline-flex items-center justify-center h-8 w-8 dark:bg-success-950 dark:text-success-400 dark:hover:bg-success-900",
        AlertType.Error => "ms-auto -mx-1.5 -my-1.5 bg-error-50 text-error-600 rounded-lg focus:ring-2 focus:ring-error-400 p-1.5 hover:bg-error-100 inline-flex items-center justify-center h-8 w-8 dark:bg-error-950 dark:text-error-400 dark:hover:bg-error-900",
        AlertType.Warning => "ms-auto -mx-1.5 -my-1.5 bg-warning-50 text-warning-600 rounded-lg focus:ring-2 focus:ring-warning-400 p-1.5 hover:bg-warning-100 inline-flex items-center justify-center h-8 w-8 dark:bg-warning-950 dark:text-warning-400 dark:hover:bg-warning-900",
        _ => "ms-auto -mx-1.5 -my-1.5 bg-info-50 text-info-600 rounded-lg focus:ring-2 focus:ring-info-400 p-1.5 hover:bg-info-100 inline-flex items-center justify-center h-8 w-8 dark:bg-info-950 dark:text-info-400 dark:hover:bg-info-900"
    };

    private string Icon => Type switch
    {
        AlertType.Success => "<path d=\"M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z\"/>",
        AlertType.Error => "<path d=\"M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z\"/>",
        AlertType.Warning => "<path d=\"M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z\"/>",
        _ => "<path d=\"M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z\"/>"
    };

    public enum AlertType
    {
        Info,
        Success,
        Warning,
        Error
    }
}
