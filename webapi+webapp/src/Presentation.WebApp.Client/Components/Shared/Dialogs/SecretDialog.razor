@inject IJSRuntime JSRuntime

<DialogBase @bind-IsOpen="IsOpen"
            Title="@Title"
            Variant="DialogVariant.Warning"
            Size="DialogSize.Large"
            CloseOnBackdropClick="false"
            CloseOnEscape="true">
    <Icon>
        <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
    </Icon>
    <HeaderContent>
        @if (!string.IsNullOrEmpty(Message))
        {
            <p class="text-secondary-600 dark:text-secondary-400">@Message</p>
        }
    </HeaderContent>
    <BodyContent>
        <div class="p-4 bg-secondary-100 dark:bg-secondary-900 rounded-lg">
            <div class="flex items-center justify-between gap-2">
                <code class="text-sm font-mono text-secondary-800 dark:text-secondary-200 break-all select-all">@Secret</code>
                <button type="button"
                        class="shrink-0 p-2 text-secondary-500 hover:text-secondary-700 dark:text-secondary-400 dark:hover:text-secondary-200 transition-colors"
                        @onclick="CopyToClipboard"
                        title="Copy to clipboard">
                    @if (_copied)
                    {
                        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    }
                    else
                    {
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                    }
                </button>
            </div>
        </div>

        <div class="mt-4 p-3 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg">
            <div class="flex items-start gap-2">
                <svg class="w-5 h-5 text-amber-600 dark:text-amber-400 shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <p class="text-sm text-amber-700 dark:text-amber-300">
                    This is the only time you'll be able to see this secret. Please copy and store it securely.
                </p>
            </div>
        </div>
    </BodyContent>
    <FooterContent>
        <Button Variant="Button.ButtonVariant.Primary" OnClick="Close">
            @CloseText
        </Button>
    </FooterContent>
</DialogBase>

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback<bool> IsOpenChanged { get; set; }

    [Parameter, EditorRequired]
    public string Secret { get; set; } = string.Empty;

    [Parameter]
    public string? Title { get; set; } = "Secret";

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public string CloseText { get; set; } = "Done";

    private bool _copied;

    private async Task CopyToClipboard()
    {
        await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", Secret);
        _copied = true;
        StateHasChanged();

        await Task.Delay(2000);
        _copied = false;
        StateHasChanged();
    }

    private async Task Close()
    {
        IsOpen = false;
        await IsOpenChanged.InvokeAsync(false);
    }
}
