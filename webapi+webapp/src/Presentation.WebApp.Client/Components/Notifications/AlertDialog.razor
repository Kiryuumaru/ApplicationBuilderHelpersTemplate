@using Presentation.WebApp.Client.Components.Notifications.Models

<DialogBase Title="@Request.Title"
            Variant="DialogVariant.Primary"
            CloseOnBackdropClick="false"
            CloseOnEscape="true"
            OnClose="Acknowledge">
    <Icon>
        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
    </Icon>
    <HeaderContent>
        <p class="text-secondary-600 dark:text-secondary-400">@Request.Message</p>
    </HeaderContent>
    <FooterContent>
        <Button Variant="Button.ButtonVariant.Primary" OnClick="Acknowledge">
            @Request.OkText
        </Button>
    </FooterContent>
</DialogBase>

@code {
    [Parameter, EditorRequired]
    public AlertDialogRequest Request { get; set; } = default!;

    [Parameter]
    public EventCallback OnResult { get; set; }

    private async Task Acknowledge()
    {
        await OnResult.InvokeAsync();
    }
}
