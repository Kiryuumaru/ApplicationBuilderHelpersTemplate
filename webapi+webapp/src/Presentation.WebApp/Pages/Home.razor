@page "/"

<PageTitle>Dashboard</PageTitle>

<div class="mb-4">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Dashboard</h1>
    <p class="text-gray-600 dark:text-gray-400">Welcome to the application</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-4">
    <Card>
        <div class="flex items-center">
            <div class="inline-flex flex-shrink-0 justify-center items-center w-12 h-12 text-white bg-primary-700 rounded-lg">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
                </svg>
            </div>
            <div class="ms-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Users</h3>
                <span class="text-2xl font-bold text-gray-900 dark:text-white">--</span>
            </div>
        </div>
    </Card>
    
    <Card>
        <div class="flex items-center">
            <div class="inline-flex flex-shrink-0 justify-center items-center w-12 h-12 text-white bg-green-600 rounded-lg">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
            </div>
            <div class="ms-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Active</h3>
                <span class="text-2xl font-bold text-gray-900 dark:text-white">--</span>
            </div>
        </div>
    </Card>
    
    <Card>
        <div class="flex items-center">
            <div class="inline-flex flex-shrink-0 justify-center items-center w-12 h-12 text-white bg-yellow-500 rounded-lg">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
            </div>
            <div class="ms-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Pending</h3>
                <span class="text-2xl font-bold text-gray-900 dark:text-white">--</span>
            </div>
        </div>
    </Card>
    
    <Card>
        <div class="flex items-center">
            <div class="inline-flex flex-shrink-0 justify-center items-center w-12 h-12 text-white bg-purple-600 rounded-lg">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                    <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
                </svg>
            </div>
            <div class="ms-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Sessions</h3>
                <span class="text-2xl font-bold text-gray-900 dark:text-white">--</span>
            </div>
        </div>
    </Card>
</div>

<AuthorizeView>
    <Authorized>
        <Card Title="Welcome Back!">
            <p class="mb-3 text-gray-500 dark:text-gray-400">
                You are signed in as <span class="font-semibold">@context.User.Identity?.Name</span>.
            </p>
            <a href="account/profile" class="inline-flex items-center text-primary-600 hover:underline">
                View Profile
                <svg class="w-4 h-4 ms-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </Card>
    </Authorized>
    <NotAuthorized>
        <Card Title="Get Started">
            <p class="mb-3 text-gray-500 dark:text-gray-400">
                Sign in to access all features of the application.
            </p>
            <a href="auth/login" class="inline-flex items-center text-primary-600 hover:underline">
                Sign In
                <svg class="w-4 h-4 ms-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </Card>
    </NotAuthorized>
</AuthorizeView>
