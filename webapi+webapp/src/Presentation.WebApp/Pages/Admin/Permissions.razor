@page "/admin/permissions"
@attribute [Authorize(Roles = "Admin")]
@inject Application.Client.Iam.Interfaces.IPermissionsClient PermissionsClient

<PageTitle>Permissions</PageTitle>

<div class="mb-4">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Permissions</h1>
    <p class="text-gray-600 dark:text-gray-400">View all available system permissions</p>
</div>

@if (_loading)
{
    <div class="flex items-center justify-center py-12">
        <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
        <span class="ms-2 text-gray-600 dark:text-gray-400">Loading permissions...</span>
    </div>
}
else if (_errorMessage is not null)
{
    <Alert Color="Alert.AlertColor.Red" class="mb-4">
        <span class="font-medium">Error:</span> @_errorMessage
    </Alert>
}
else
{
    <Card>
        <div class="mb-4">
            <TextInput @bind-Value="_searchTerm" Placeholder="Search permissions..." WrapperClass="max-w-md" LeadingIcon="@SearchIcon" />
        </div>
        
        <div class="space-y-2">
            @foreach (var permission in FilteredPermissions)
            {
                <PermissionTreeNode Permission="permission" SearchTerm="@_searchTerm" />
            }
        </div>
        
        @if (!FilteredPermissions.Any())
        {
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                <svg class="w-12 h-12 mx-auto mb-4 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p>No permissions found matching "<strong>@_searchTerm</strong>"</p>
            </div>
        }
    </Card>
}

@code {
    private const string SearchIcon = """<svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>""";
    
    private List<Application.Client.Iam.Models.IamPermission> _permissions = new();
    private bool _loading = true;
    private string? _errorMessage;
    private string _searchTerm = string.Empty;

    private IEnumerable<Application.Client.Iam.Models.IamPermission> FilteredPermissions
    {
        get
        {
            if (string.IsNullOrWhiteSpace(_searchTerm))
                return _permissions;

            return _permissions.Where(p => MatchesSearch(p, _searchTerm));
        }
    }

    private bool MatchesSearch(Application.Client.Iam.Models.IamPermission permission, string search)
    {
        var searchLower = search.ToLowerInvariant();
        
        if (permission.Path.Contains(searchLower, StringComparison.OrdinalIgnoreCase) ||
            permission.Identifier.Contains(searchLower, StringComparison.OrdinalIgnoreCase) ||
            (permission.Description?.Contains(searchLower, StringComparison.OrdinalIgnoreCase) ?? false))
        {
            return true;
        }

        return permission.Children.Any(c => MatchesSearch(c, search));
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadPermissions();
    }

    private async Task LoadPermissions()
    {
        _loading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            _permissions = await PermissionsClient.ListPermissionsAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load permissions: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }
}
