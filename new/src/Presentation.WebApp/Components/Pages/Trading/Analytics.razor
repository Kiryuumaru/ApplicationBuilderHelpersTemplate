@page "/trading/analytics"
@using Application.Trading.Bots.Abstractions
@using Domain.Trading.Bots.Enums
@using Domain.Trading.Bots.Models
@using Domain.Identity.Models
@using Microsoft.AspNetCore.Identity
@inject IBotInstanceStore BotInstanceStore
@inject IBotTemplateStore BotTemplateStore
@inject IPositionStore PositionStore
@inject IBotSignalStore SignalStore
@inject UserManager<User> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<Analytics> Logger
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Analytics</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <span class="bi bi-pie-chart me-2"></span>Trading Analytics
            </h1>
            <p class="text-muted">Performance metrics and trading statistics</p>
        </div>
        <div class="col-auto">
            <div class="btn-group">
                <button class="btn @(_timeRange == "7d" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetTimeRange("7d")'>7D</button>
                <button class="btn @(_timeRange == "30d" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetTimeRange("30d")'>30D</button>
                <button class="btn @(_timeRange == "90d" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetTimeRange("90d")'>90D</button>
                <button class="btn @(_timeRange == "all" ? "btn-primary" : "btn-outline-primary")" @onclick='() => SetTimeRange("all")'>All</button>
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- KPI Cards -->
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body py-3">
                        <div class="h3 mb-0 @(_totalPnL >= 0 ? "text-success" : "text-danger")">
                            @(_totalPnL >= 0 ? "+" : "")$@_totalPnL.ToString("N2")
                        </div>
                        <small class="text-muted">Total P/L</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body py-3">
                        <div class="h3 mb-0">@_totalTrades</div>
                        <small class="text-muted">Total Trades</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body py-3">
                        <div class="h3 mb-0 @(_winRate >= 50 ? "text-success" : "text-warning")">@_winRate.ToString("N1")%</div>
                        <small class="text-muted">Win Rate</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body py-3">
                        <div class="h3 mb-0 text-success">@_winningTrades</div>
                        <small class="text-muted">Winning</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body py-3">
                        <div class="h3 mb-0 text-danger">@_losingTrades</div>
                        <small class="text-muted">Losing</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body py-3">
                        <div class="h3 mb-0">@_activePositions</div>
                        <small class="text-muted">Open Positions</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- P/L by Bot -->
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-bar-chart me-2"></span>P/L by Bot</h5>
                    </div>
                    <div class="card-body">
                        @if (_botPerformance.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                <span class="bi bi-inbox fs-1 d-block mb-2"></span>
                                No bot performance data
                            </div>
                        }
                        else
                        {
                            @foreach (var bot in _botPerformance.OrderByDescending(b => b.PnL))
                            {
                                var maxPnL = _botPerformance.Max(b => Math.Abs(b.PnL));
                                var widthPercent = maxPnL > 0 ? Math.Abs(bot.PnL) / maxPnL * 100 : 0;
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="fw-bold">@bot.Name</span>
                                        <span class="@(bot.PnL >= 0 ? "text-success" : "text-danger")">
                                            @(bot.PnL >= 0 ? "+" : "")$@bot.PnL.ToString("N2")
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 10px;">
                                        <div class="progress-bar @(bot.PnL >= 0 ? "bg-success" : "bg-danger")" 
                                             style="width: @(widthPercent)%"></div>
                                    </div>
                                    <small class="text-muted">@bot.Trades trades | @bot.WinRate.ToString("N0")% win rate</small>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>

            <!-- P/L by Trading Pair -->
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-currency-exchange me-2"></span>P/L by Trading Pair</h5>
                    </div>
                    <div class="card-body">
                        @if (_pairPerformance.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                <span class="bi bi-inbox fs-1 d-block mb-2"></span>
                                No pair performance data
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Pair</th>
                                            <th class="text-end">Trades</th>
                                            <th class="text-end">Win Rate</th>
                                            <th class="text-end">P/L</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var pair in _pairPerformance.OrderByDescending(p => p.PnL))
                                        {
                                            <tr>
                                                <td><span class="badge bg-secondary">@pair.Symbol</span></td>
                                                <td class="text-end">@pair.Trades</td>
                                                <td class="text-end @(pair.WinRate >= 50 ? "text-success" : "text-warning")">@pair.WinRate.ToString("N0")%</td>
                                                <td class="text-end @(pair.PnL >= 0 ? "text-success" : "text-danger")">
                                                    @(pair.PnL >= 0 ? "+" : "")$@pair.PnL.ToString("N2")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Recent Signals -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><span class="bi bi-broadcast me-2"></span>Recent Signals</h5>
                        <span class="badge bg-secondary">@_recentSignals.Count</span>
                    </div>
                    <div class="card-body p-0" style="max-height: 350px; overflow-y: auto;">
                        @if (_recentSignals.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                <span class="bi bi-broadcast fs-1 d-block mb-2"></span>
                                No recent signals
                            </div>
                        }
                        else
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var signal in _recentSignals.OrderByDescending(s => s.Timestamp).Take(15))
                                {
                                    <div class="list-group-item py-2">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <span class="badge @GetSignalBadgeClass(signal.SignalType) me-1">@signal.SignalType</span>
                                                <span class="fw-bold">@signal.TradingPair.Symbol</span>
                                            </div>
                                            <small class="text-muted">@signal.Timestamp.ToString("HH:mm")</small>
                                        </div>
                                        <small class="text-muted">@signal.Price.ToString("N4") | @signal.Reason</small>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Open Positions -->
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><span class="bi bi-wallet2 me-2"></span>Open Positions</h5>
                        <span class="badge bg-secondary">@_openPositions.Count positions</span>
                    </div>
                    <div class="card-body p-0" style="max-height: 350px; overflow-y: auto;">
                        @if (_openPositions.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                <span class="bi bi-wallet fs-1 d-block mb-2"></span>
                                No open positions
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-sm mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Symbol</th>
                                            <th>Side</th>
                                            <th>Entry</th>
                                            <th>Current</th>
                                            <th>P/L</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var position in _openPositions)
                                        {
                                            <tr>
                                                <td><span class="badge bg-secondary">@position.TradingPair.Symbol</span></td>
                                                <td>
                                                    <span class="badge @(position.Side == PositionSide.Long ? "bg-success" : "bg-danger")">
                                                        @position.Side
                                                    </span>
                                                </td>
                                                <td>@position.EntryPrice.ToString("N4")</td>
                                                <td>@position.CurrentPrice.ToString("N4")</td>
                                                <td class="@(position.UnrealizedPnL >= 0 ? "text-success" : "text-danger")">
                                                    @(position.UnrealizedPnL >= 0 ? "+" : "")$@position.UnrealizedPnL.ToString("N2")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Guid _currentUserId = Guid.Empty;
    private List<BotTemplate> _templates = new();
    private List<BotInstance> _instances = new();
    private List<Position> _openPositions = new();
    private List<Position> _closedPositions = new();
    private List<BotSignal> _recentSignals = new();
    private bool _isLoading = true;
    private string _timeRange = "30d";

    // Calculated metrics
    private decimal _totalPnL;
    private int _totalTrades;
    private int _winningTrades;
    private int _losingTrades;
    private decimal _winRate;
    private int _activePositions;

    private List<BotPerformance> _botPerformance = new();
    private List<PairPerformance> _pairPerformance = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = await UserManager.GetUserAsync(authState.User);
            _currentUserId = user?.Id ?? Guid.Empty;
            if (_currentUserId == Guid.Empty) return;

            _templates = (await BotTemplateStore.GetByUserIdAsync(_currentUserId)).ToList();
            _instances = (await BotInstanceStore.GetByUserIdAsync(_currentUserId)).ToList();

            var startDate = GetStartDate();
            
            // Load positions
            var allPositions = new List<Position>();
            foreach (var instance in _instances)
            {
                var positions = await PositionStore.GetByInstanceIdAsync(instance.Id);
                allPositions.AddRange(positions);
            }

            _openPositions = allPositions.Where(p => p.IsOpen).ToList();
            _closedPositions = allPositions.Where(p => !p.IsOpen && p.ClosedAt >= startDate).ToList();

            // Load signals
            _recentSignals.Clear();
            foreach (var instance in _instances)
            {
                var signals = await SignalStore.GetByInstanceIdAsync(instance.Id);
                _recentSignals.AddRange(signals.Where(s => s.Timestamp >= startDate));
            }

            CalculateMetrics();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load analytics data");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void CalculateMetrics()
    {
        // Total metrics
        _totalPnL = _closedPositions.Sum(p => p.RealizedPnL ?? 0);
        _totalTrades = _closedPositions.Count;
        _winningTrades = _closedPositions.Count(p => (p.RealizedPnL ?? 0) > 0);
        _losingTrades = _closedPositions.Count(p => (p.RealizedPnL ?? 0) < 0);
        _winRate = _totalTrades > 0 ? (decimal)_winningTrades / _totalTrades * 100 : 0;
        _activePositions = _openPositions.Count;

        // Bot performance
        _botPerformance = _instances.Select(instance =>
        {
            var template = _templates.FirstOrDefault(t => t.Id == instance.BotTemplateId);
            var positions = _closedPositions.Where(p => p.BotInstanceId == instance.Id).ToList();
            var winning = positions.Count(p => (p.RealizedPnL ?? 0) > 0);
            return new BotPerformance
            {
                Name = template?.Name ?? "Unknown",
                PnL = positions.Sum(p => p.RealizedPnL ?? 0),
                Trades = positions.Count,
                WinRate = positions.Count > 0 ? (decimal)winning / positions.Count * 100 : 0
            };
        }).Where(b => b.Trades > 0).ToList();

        // Pair performance
        _pairPerformance = _closedPositions
            .GroupBy(p => p.TradingPair.Symbol)
            .Select(g =>
            {
                var winning = g.Count(p => (p.RealizedPnL ?? 0) > 0);
                return new PairPerformance
                {
                    Symbol = g.Key,
                    PnL = g.Sum(p => p.RealizedPnL ?? 0),
                    Trades = g.Count(),
                    WinRate = g.Count() > 0 ? (decimal)winning / g.Count() * 100 : 0
                };
            }).ToList();
    }

    private DateTimeOffset GetStartDate() => _timeRange switch
    {
        "7d" => DateTimeOffset.UtcNow.AddDays(-7),
        "30d" => DateTimeOffset.UtcNow.AddDays(-30),
        "90d" => DateTimeOffset.UtcNow.AddDays(-90),
        _ => DateTimeOffset.MinValue
    };

    private async Task SetTimeRange(string range)
    {
        _timeRange = range;
        await LoadDataAsync();
    }

    private static string GetSignalBadgeClass(SignalType type) => type switch
    {
        SignalType.Buy => "bg-success",
        SignalType.Sell => "bg-danger",
        _ => "bg-secondary"
    };

    private record BotPerformance
    {
        public string Name { get; init; } = "";
        public decimal PnL { get; init; }
        public int Trades { get; init; }
        public decimal WinRate { get; init; }
    }

    private record PairPerformance
    {
        public string Symbol { get; init; } = "";
        public decimal PnL { get; init; }
        public int Trades { get; init; }
        public decimal WinRate { get; init; }
    }
}
