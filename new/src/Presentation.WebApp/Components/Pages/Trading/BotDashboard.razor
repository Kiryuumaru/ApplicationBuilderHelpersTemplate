@page "/trading/bot-dashboard"
@using Application.Trading.Bots.Abstractions
@using Domain.Trading.Bots.Enums
@using Domain.Trading.Bots.Models
@using Domain.Identity.Models
@using Microsoft.AspNetCore.Identity
@inject IBotInstanceStore BotInstanceStore
@inject IBotTemplateStore BotTemplateStore
@inject UserManager<User> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILogger<BotDashboard> Logger
@rendermode InteractiveServer
@attribute [Authorize]
@implements IDisposable

<PageTitle>Bot Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <span class="bi bi-robot me-2"></span>Bot Dashboard
            </h1>
            <p class="text-muted">Monitor your trading bots and system health</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="RefreshAsync">
                <span class="bi bi-arrow-clockwise me-1"></span>Refresh
            </button>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Summary Cards Row -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-1 opacity-75">Total Bots</h6>
                                <h2 class="mb-0">@_instances.Count</h2>
                            </div>
                            <span class="bi bi-robot fs-1 opacity-50"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-1 opacity-75">Running</h6>
                                <h2 class="mb-0">@_instances.Count(i => i.Status == BotInstanceStatus.Running)</h2>
                            </div>
                            <span class="bi bi-play-circle fs-1 opacity-50"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-1 opacity-75">Paused</h6>
                                <h2 class="mb-0">@_instances.Count(i => i.Status == BotInstanceStatus.Paused)</h2>
                            </div>
                            <span class="bi bi-pause-circle fs-1 opacity-50"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-1 opacity-75">Templates</h6>
                                <h2 class="mb-0">@_templates.Count</h2>
                            </div>
                            <span class="bi bi-file-earmark-code fs-1 opacity-50"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Running Bots Detail -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><span class="bi bi-cpu me-2"></span>Bot Instances</h5>
                        <a href="/trading/bots/instances" class="btn btn-sm btn-outline-primary">
                            <span class="bi bi-plus me-1"></span>Manage
                        </a>
                    </div>
                    <div class="card-body">
                        @if (_instances.Count == 0)
                        {
                            <div class="text-center py-4 text-muted">
                                <span class="bi bi-stop-circle fs-1 d-block mb-2"></span>
                                No bots configured yet
                                <div class="mt-2">
                                    <a href="/trading/bots/instances" class="btn btn-sm btn-primary">
                                        <span class="bi bi-plus me-1"></span>Create Instance
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Template</th>
                                            <th>Exchange</th>
                                            <th>Mode</th>
                                            <th>Status</th>
                                            <th>Balance</th>
                                            <th>P/L</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var instance in _instances.OrderByDescending(i => i.Status == BotInstanceStatus.Running))
                                        {
                                            var template = _templates.FirstOrDefault(t => t.Id == instance.BotTemplateId);
                                            var pnl = instance.CurrentBalance - instance.InitialBalance;
                                            <tr>
                                                <td>
                                                    <div class="fw-bold">@(template?.Name ?? "Unknown")</div>
                                                    <small class="text-muted">@(template?.StrategyId ?? "N/A")</small>
                                                </td>
                                                <td>@instance.ExchangeCode</td>
                                                <td>
                                                    <span class="badge @GetModeBadgeClass(instance.Mode)">@instance.Mode</span>
                                                </td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(instance.Status)">@instance.Status</span>
                                                </td>
                                                <td>$@instance.CurrentBalance.ToString("N2")</td>
                                                <td class="@(pnl >= 0 ? "text-success" : "text-danger")">
                                                    @(pnl >= 0 ? "+" : "")$@pnl.ToString("N2")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions & Stats -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-lightning me-2"></span>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/trading/bots/templates" class="btn btn-outline-primary">
                                <span class="bi bi-file-earmark-code me-1"></span>Manage Templates
                            </a>
                            <a href="/trading/bots/instances" class="btn btn-outline-primary">
                                <span class="bi bi-collection me-1"></span>Manage Instances
                            </a>
                            <a href="/trading/backtest" class="btn btn-outline-secondary">
                                <span class="bi bi-clock-history me-1"></span>Run Backtest
                            </a>
                            <a href="/trading/analytics" class="btn btn-outline-secondary">
                                <span class="bi bi-pie-chart me-1"></span>View Analytics
                            </a>
                            <a href="/trading" class="btn btn-outline-secondary">
                                <span class="bi bi-graph-up me-1"></span>Market Prices
                            </a>
                        </div>
                    </div>
                </div>

                <!-- System Status -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-activity me-2"></span>System Status</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0 small">
                            <dt class="col-6">Templates</dt>
                            <dd class="col-6 text-end">@_templates.Count</dd>
                            <dt class="col-6">Instances</dt>
                            <dd class="col-6 text-end">@_instances.Count</dd>
                            <dt class="col-6">Running</dt>
                            <dd class="col-6 text-end text-success">@_instances.Count(i => i.Status == BotInstanceStatus.Running)</dd>
                            <dt class="col-6">Stopped</dt>
                            <dd class="col-6 text-end">@_instances.Count(i => i.Status == BotInstanceStatus.Stopped)</dd>
                            <dt class="col-6">Last Update</dt>
                            <dd class="col-6 text-end">@_lastRefresh.ToString("HH:mm:ss")</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Guid _currentUserId = Guid.Empty;
    private List<BotTemplate> _templates = new();
    private List<BotInstance> _instances = new();
    private bool _isLoading = true;
    private DateTime _lastRefresh = DateTime.UtcNow;
    private System.Threading.Timer? _refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
        
        // Auto-refresh every 30 seconds
        _refreshTimer = new System.Threading.Timer(async _ => 
        {
            await RefreshAsync();
            await InvokeAsync(StateHasChanged);
        }, null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
    }

    private async Task<Guid> GetCurrentUserIdAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);
        return user?.Id ?? Guid.Empty;
    }

    private async Task LoadDataAsync()
    {
        _isLoading = true;
        try
        {
            _currentUserId = await GetCurrentUserIdAsync();
            if (_currentUserId == Guid.Empty) return;

            _templates = (await BotTemplateStore.GetByUserIdAsync(_currentUserId)).ToList();
            _instances = (await BotInstanceStore.GetByUserIdAsync(_currentUserId)).ToList();
            _lastRefresh = DateTime.UtcNow;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load bot dashboard data");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task RefreshAsync()
    {
        await LoadDataAsync();
    }

    private static string GetModeBadgeClass(ExecutionMode mode) => mode switch
    {
        ExecutionMode.Live => "bg-danger",
        ExecutionMode.Paper => "bg-warning text-dark",
        ExecutionMode.Backtest => "bg-info",
        _ => "bg-secondary"
    };

    private static string GetStatusBadgeClass(BotInstanceStatus status) => status switch
    {
        BotInstanceStatus.Running => "bg-success",
        BotInstanceStatus.Starting => "bg-info",
        BotInstanceStatus.Paused => "bg-warning text-dark",
        BotInstanceStatus.Stopped => "bg-secondary",
        BotInstanceStatus.Error => "bg-danger",
        BotInstanceStatus.Completed => "bg-primary",
        _ => "bg-secondary"
    };

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }
}
