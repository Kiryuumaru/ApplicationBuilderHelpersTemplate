@page "/trading/accounts"
@using Application.Trading.Interfaces
@using Domain.Trading.Enums
@using Domain.Trading.Entities
@using Domain.Trading.ValueObjects
@inject IExchangeAccountStore ExchangeAccountStore
@inject IExchangeRegistry ExchangeRegistry
@inject ILogger<ExchangeAccounts> Logger
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Exchange Accounts</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <span class="bi bi-key me-2"></span>Exchange Accounts
            </h1>
            <p class="text-muted">Manage your cryptocurrency exchange API connections</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <span class="bi bi-plus-lg me-1"></span>Add Account
            </button>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_error != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @_error
            <button class="btn btn-link" @onclick="LoadAccountsAsync">Retry</button>
        </div>
    }
    else
    {
        @if (!_accounts.Any())
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <span class="bi bi-key display-1 text-muted"></span>
                    <h4 class="mt-3">No Exchange Accounts</h4>
                    <p class="text-muted">
                        Connect your first exchange account to start trading.
                    </p>
                    <button class="btn btn-primary" @onclick="ShowAddModal">
                        <span class="bi bi-plus-lg me-1"></span>Add Your First Account
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var account in _accounts)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <span class="bi bi-bank me-2"></span>@account.Name
                                </h5>
                                <span class="badge @GetStatusBadgeClass(account.Status)">
                                    @account.Status
                                </span>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">Exchange</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge bg-primary">@account.ExchangeCode.ToUpperInvariant()</span>
                                    </dd>

                                    <dt class="col-sm-5">Mode</dt>
                                    <dd class="col-sm-7">
                                        <span class="badge @(account.Mode == ExchangeAccountMode.Live ? "bg-success" : "bg-warning text-dark")">
                                            @account.Mode
                                        </span>
                                    </dd>

                                    <dt class="col-sm-5">API Key</dt>
                                    <dd class="col-sm-7">
                                        @if (account.Credentials != null)
                                        {
                                            <code>@MaskApiKey(account.Credentials.Key)</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not set</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-5">Created</dt>
                                    <dd class="col-sm-7">@account.CreatedAt.ToString("yyyy-MM-dd")</dd>
                                </dl>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100" role="group">
                                    <button class="btn btn-outline-warning" @onclick="() => EditAccount(account)">
                                        <span class="bi bi-pencil me-1"></span>Edit
                                    </button>
                                    <button class="btn btn-outline-danger" @onclick="() => ConfirmDelete(account)">
                                        <span class="bi bi-trash me-1"></span>Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="mb-0"><span class="bi bi-info-circle me-2"></span>Available Exchanges</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var exchangeCode in _availableExchanges)
                    {
                        <div class="col-auto mb-2">
                            <span class="badge bg-light text-dark border">
                                <span class="bi bi-bank me-1"></span>@exchangeCode
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (_showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @(_editingAccount == null ? "Add Exchange Account" : "Edit Exchange Account")
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideModal"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="_formModel" OnValidSubmit="SaveAccountAsync">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label">Account Name</label>
                            <InputText class="form-control" @bind-Value="_formModel.Name" 
                                       placeholder="My Trading Account" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Exchange</label>
                            <InputSelect class="form-select" @bind-Value="_formModel.ExchangeCode"
                                         disabled="@(_editingAccount != null)">
                                <option value="">Select an exchange...</option>
                                @foreach (var exchangeCode in _availableExchanges)
                                {
                                    <option value="@exchangeCode">@exchangeCode</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mode</label>
                            <InputSelect class="form-select" @bind-Value="_formModel.Mode">
                                <option value="Live">Live (Real Trading)</option>
                                <option value="Testnet">Testnet (Simulation)</option>
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">API Key</label>
                            <InputText class="form-control" @bind-Value="_formModel.ApiKey" 
                                       placeholder="Your API Key" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">API Secret</label>
                            <InputText type="password" class="form-control" @bind-Value="_formModel.ApiSecret" 
                                       placeholder="Your API Secret" />
                        </div>

                        @if (_formError != null)
                        {
                            <div class="alert alert-danger">@_formError</div>
                        }

                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                            <button type="submit" class="btn btn-primary" disabled="@_isSaving">
                                @if (_isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                Save
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@if (_showDeleteModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <span class="bi bi-exclamation-triangle me-2"></span>Confirm Delete
                    </h5>
                    <button type="button" class="btn-close" @onclick="HideDeleteModal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the account "<strong>@_accountToDelete?.Name</strong>"?</p>
                    <p class="text-muted">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideDeleteModal">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteAccountAsync">
                        <span class="bi bi-trash me-1"></span>Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private static readonly Guid CurrentUserId = Guid.Parse("00000000-0000-0000-0000-000000000001");

    private List<ExchangeAccount> _accounts = new();
    private List<string> _availableExchanges = new();
    private bool _isLoading = true;
    private bool _isSaving;
    private string? _error;
    private string? _formError;
    
    private bool _showModal;
    private bool _showDeleteModal;
    private ExchangeAccount? _editingAccount;
    private ExchangeAccount? _accountToDelete;
    private AccountFormModel _formModel = new();

    protected override async Task OnInitializedAsync()
    {
        _availableExchanges = ExchangeRegistry.GetAllCodes().ToList();
        await LoadAccountsAsync();
    }

    private async Task LoadAccountsAsync()
    {
        try
        {
            _isLoading = true;
            _error = null;
            _accounts = (await ExchangeAccountStore.ListAsync(default)).ToList();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load accounts");
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ShowAddModal()
    {
        _editingAccount = null;
        _formModel = new AccountFormModel { Mode = "Live" };
        _formError = null;
        _showModal = true;
    }

    private void EditAccount(ExchangeAccount account)
    {
        _editingAccount = account;
        _formModel = new AccountFormModel
        {
            Name = account.Name,
            ExchangeCode = account.ExchangeCode,
            Mode = account.Mode.ToString(),
            ApiKey = account.Credentials?.Key ?? "",
            ApiSecret = ""
        };
        _formError = null;
        _showModal = true;
    }

    private void HideModal()
    {
        _showModal = false;
        _editingAccount = null;
        _formModel = new();
    }

    private async Task SaveAccountAsync()
    {
        try
        {
            _isSaving = true;
            _formError = null;

            var mode = _formModel.Mode == "Testnet" ? ExchangeAccountMode.Testnet : ExchangeAccountMode.Live;

            if (_editingAccount == null)
            {
                var account = ExchangeAccount.Create(
                    CurrentUserId,
                    _formModel.ExchangeCode,
                    _formModel.Name,
                    mode);
                
                if (!string.IsNullOrEmpty(_formModel.ApiKey) && !string.IsNullOrEmpty(_formModel.ApiSecret))
                {
                    var credentials = ApiCredentials.Create(_formModel.ApiKey, _formModel.ApiSecret);
                    account.SetCredentials(credentials);
                }
                
                await ExchangeAccountStore.SaveAsync(account, default);
            }
            else
            {
                _editingAccount.Rename(_formModel.Name);
                
                if (!string.IsNullOrEmpty(_formModel.ApiKey) && !string.IsNullOrEmpty(_formModel.ApiSecret))
                {
                    var credentials = ApiCredentials.Create(_formModel.ApiKey, _formModel.ApiSecret);
                    _editingAccount.SetCredentials(credentials);
                }
                
                await ExchangeAccountStore.SaveAsync(_editingAccount, default);
            }

            HideModal();
            await LoadAccountsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to save account");
            _formError = ex.Message;
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void ConfirmDelete(ExchangeAccount account)
    {
        _accountToDelete = account;
        _showDeleteModal = true;
    }

    private void HideDeleteModal()
    {
        _showDeleteModal = false;
        _accountToDelete = null;
    }

    private async Task DeleteAccountAsync()
    {
        if (_accountToDelete == null) return;

        try
        {
            await ExchangeAccountStore.DeleteAsync(_accountToDelete.Id, default);
            HideDeleteModal();
            await LoadAccountsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to delete account");
            _error = ex.Message;
        }
    }

    private static string MaskApiKey(string apiKey)
    {
        if (string.IsNullOrEmpty(apiKey) || apiKey.Length < 8) return "***";
        return apiKey[..4] + "..." + apiKey[^4..];
    }

    private static string GetStatusBadgeClass(ExchangeAccountStatus status) => status switch
    {
        ExchangeAccountStatus.Connected => "bg-success",
        ExchangeAccountStatus.CredentialsPresent => "bg-info",
        ExchangeAccountStatus.Error => "bg-danger",
        ExchangeAccountStatus.Disabled => "bg-secondary",
        _ => "bg-warning text-dark"
    };

    private class AccountFormModel
    {
        public string Name { get; set; } = "";
        public string ExchangeCode { get; set; } = "";
        public string Mode { get; set; } = "Live";
        public string ApiKey { get; set; } = "";
        public string ApiSecret { get; set; } = "";
    }
}
