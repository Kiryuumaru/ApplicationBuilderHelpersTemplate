@page "/trading"
@using Application.Trading.Interfaces
@using Application.Trading.Abstractions
@using Domain.Trading.ValueObjects
@inject IExchangeService ExchangeService
@inject IExchangeStreamBroadcasterFactory BroadcasterFactory
@inject IMarketDataHub MarketDataHub
@inject ILogger<Dashboard> Logger
@rendermode InteractiveServer
@attribute [Authorize]

<PageTitle>Trading Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>
                <span class="bi bi-graph-up me-2"></span>Trading Dashboard
            </h1>
            <p class="text-muted">Real-time cryptocurrency prices from Binance</p>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (_error != null)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Error:</strong> @_error
            <button class="btn btn-link" @onclick="RefreshPricesAsync">Retry</button>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><span class="bi bi-search"></span></span>
                    <input type="text" class="form-control" placeholder="Filter by market (e.g., BTC, ETH)..." 
                           @bind="_searchFilter" @bind:event="oninput" />
                </div>
            </div>
            <div class="col-md-6 text-end">
                <button class="btn btn-primary me-2" @onclick="RefreshPricesAsync">
                    <span class="bi bi-arrow-clockwise me-1"></span>Refresh
                </button>
                @if (_isStreaming)
                {
                    <button class="btn btn-danger" @onclick="StopStreaming">
                        <span class="bi bi-stop-fill me-1"></span>Stop Live
                    </button>
                }
                else
                {
                    <button class="btn btn-success" @onclick="StartStreaming">
                        <span class="bi bi-play-fill me-1"></span>Go Live
                    </button>
                }
            </div>
        </div>

        <div class="row">
            <div class="col-lg-9">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Market Prices</h5>
                        <div>
                            <span class="badge bg-primary me-2">@FilteredPrices.Count() prices</span>
                            @if (_isStreaming)
                            {
                                <span class="badge bg-success">
                                    <span class="bi bi-broadcast me-1"></span>Live
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th style="cursor: pointer" @onclick='() => SortBy("symbol")'>
                                            Market
                                            @if (_sortColumn == "symbol")
                                            {
                                                <span class="bi @(_sortAscending ? "bi-sort-alpha-down" : "bi-sort-alpha-up-alt")"></span>
                                            }
                                        </th>
                                        <th style="cursor: pointer" @onclick='() => SortBy("price")'>
                                            Price
                                            @if (_sortColumn == "price")
                                            {
                                                <span class="bi @(_sortAscending ? "bi-sort-numeric-down" : "bi-sort-numeric-up-alt")"></span>
                                            }
                                        </th>
                                        <th>Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var price in FilteredPrices.Take(_displayCount))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@price.Symbol</span>
                                            </td>
                                            <td>
                                                <span class="@GetPriceChangeClass(price)">
                                                    @FormatPrice(price.Value)
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">@price.Timestamp.ToString("HH:mm:ss")</small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @{
                            var filteredList = FilteredPrices.ToList();
                            var totalFiltered = filteredList.Count;
                            var showing = Math.Min(_displayCount, totalFiltered);
                            var remaining = totalFiltered - showing;
                            var canShowLess = _displayCount > PageSize;
                        }
                        @if (remaining > 0 || canShowLess)
                        {
                            <div class="card-footer text-center">
                                <span class="text-muted me-2">Showing @showing of @totalFiltered</span>
                                @if (canShowLess)
                                {
                                    <button class="btn btn-sm btn-outline-warning" @onclick="ShowLess">
                                        Show less
                                    </button>
                                }
                                @if (remaining > 0)
                                {
                                    <button class="btn btn-sm btn-outline-primary ms-2" @onclick="ShowMore">
                                        Show @Math.Min(PageSize, remaining) more
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="ShowAll">
                                        Show all
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-info-circle me-2"></span>Stats</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-6">Total</dt>
                            <dd class="col-6 text-end">@_pricesBySymbol.Count prices</dd>
                            <dt class="col-6">Status</dt>
                            <dd class="col-6 text-end">@(_isStreaming ? "Streaming" : "Static")</dd>
                            <dt class="col-6">Updated</dt>
                            <dd class="col-6 text-end">@_lastUpdated.ToString("HH:mm:ss")</dd>
                        </dl>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-currency-exchange me-2"></span>Normalized</h5>
                    </div>
                    <div class="card-body">
                        @if (_normalizedPrices.Count == 0)
                        {
                            <div class="text-muted">No snapshot loaded.</div>
                        }
                        else
                        {
                            <div class="text-muted mb-2">
                                Base: @_normalizedBaseCurrency · Updated @_normalizedUpdatedAt.ToString("HH:mm:ss")
                            </div>
                            <div class="table-responsive" style="max-height: 220px; overflow-y: auto;">
                                <table class="table table-sm mb-0">
                                    <thead>
                                        <tr>
                                            <th>Asset</th>
                                            <th class="text-end">≈</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kvp in _normalizedPrices.OrderBy(k => k.Key).Take(20))
                                        {
                                            <tr>
                                                <td>@kvp.Key</td>
                                                <td class="text-end">@FormatPrice(kvp.Value.Price)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><span class="bi bi-lightning me-2"></span>Quick Links</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/trading/accounts" class="btn btn-outline-primary">
                                <span class="bi bi-key me-1"></span>Exchange Accounts
                            </a>
                            <a href="/trading/orders" class="btn btn-outline-primary">
                                <span class="bi bi-list-check me-1"></span>My Orders
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private System.Collections.Concurrent.ConcurrentDictionary<string, Price> _pricesBySymbol = new();
    private System.Collections.Concurrent.ConcurrentDictionary<string, decimal> _previousPrices = new();
    private Dictionary<string, Domain.Trading.ValueObjects.ResolvedPrice> _normalizedPrices = new(StringComparer.OrdinalIgnoreCase);
    private string _normalizedBaseCurrency = "";
    private DateTime _normalizedUpdatedAt = DateTime.MinValue;
    private bool _isLoading = true;
    private bool _isStreaming;
    private string? _error;
    private string _searchFilter = "";
    private string _sortColumn = "symbol";
    private bool _sortAscending = true;
    private DateTime _lastUpdated = DateTime.Now;
    private IAsyncDisposable? _streamSubscription;
    private int _displayCount = 50;
    private const int PageSize = 50;

    private IEnumerable<Price> FilteredPrices
    {
        get
        {
            var prices = _pricesBySymbol.Values.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(_searchFilter))
            {
                prices = prices.Where(p => 
                    p.Symbol.Contains(_searchFilter, StringComparison.OrdinalIgnoreCase));
            }

            return _sortColumn switch
            {
                "price" => _sortAscending 
                    ? prices.OrderBy(p => p.Value) 
                    : prices.OrderByDescending(p => p.Value),
                _ => _sortAscending 
                    ? prices.OrderBy(p => p.Symbol) 
                    : prices.OrderByDescending(p => p.Symbol)
            };
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            _isLoading = true;
            _error = null;
            await RefreshPricesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load trading data");
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task RefreshPricesAsync()
    {
        try
        {
            // Store previous prices for change detection
            foreach (var kvp in _pricesBySymbol)
            {
                _previousPrices[kvp.Key] = kvp.Value.Value;
            }
            
            var prices = await ExchangeService.FetchAllPricesAsync();
            _pricesBySymbol.Clear();
            foreach (var price in prices)
            {
                _pricesBySymbol[price.Symbol] = price;
            }
            _lastUpdated = DateTime.Now;
            _error = null;

            await RefreshNormalizedAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to refresh prices");
            _error = ex.Message;
        }
    }

    private async Task RefreshNormalizedAsync()
    {
        try
        {
            _normalizedBaseCurrency = MarketDataHub.GetDefaultStableCurrency("binance");
            var snapshot = await MarketDataHub.GetAllNormalizedPricesAsync("binance");
            _normalizedPrices = snapshot.ToDictionary(kvp => kvp.Key, kvp => kvp.Value, StringComparer.OrdinalIgnoreCase);
            _normalizedUpdatedAt = DateTime.Now;
        }
        catch (Exception ex)
        {
            Logger.LogDebug(ex, "Failed to load normalized price snapshot");
            _normalizedPrices = new Dictionary<string, Domain.Trading.ValueObjects.ResolvedPrice>(StringComparer.OrdinalIgnoreCase);
        }
    }

    private void StartStreaming()
    {
        var broadcaster = BroadcasterFactory.GetBroadcaster(ExchangeService.Code);
        if (broadcaster == null)
        {
            _error = "Exchange broadcaster not available";
            return;
        }

        _isStreaming = true;

        try
        {
            _streamSubscription = broadcaster.SubscribeToAllPrices(
                price =>
                {
                    // Thread-safe update using ConcurrentDictionary
                    _pricesBySymbol.AddOrUpdate(
                        price.Symbol,
                        price, // Add new
                        (key, oldPrice) =>
                        {
                            // Update existing - store previous value for change detection
                            _previousPrices[key] = oldPrice.Value;
                            return price;
                        });
                    
                    _lastUpdated = DateTime.Now;
                    InvokeAsync(StateHasChanged);
                });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Streaming error");
            _error = ex.Message;
            _isStreaming = false;
        }
    }

    private async Task StopStreamingAsync()
    {
        if (_streamSubscription != null)
        {
            await _streamSubscription.DisposeAsync();
            _streamSubscription = null;
        }
        _isStreaming = false;
    }

    private void StopStreaming()
    {
        _ = StopStreamingAsync();
    }

    private void SortBy(string column)
    {
        if (_sortColumn == column) _sortAscending = !_sortAscending;
        else { _sortColumn = column; _sortAscending = true; }
    }

    private void ShowMore() => _displayCount += PageSize;

    private void ShowLess() => _displayCount = PageSize;

    private void ShowAll() => _displayCount = int.MaxValue;

    private static string FormatPrice(decimal price) => price switch
    {
        >= 1000 => price.ToString("N2"),
        >= 1 => price.ToString("N4"),
        >= 0.01m => price.ToString("N6"),
        _ => price.ToString("N8")
    };

    private string GetPriceChangeClass(Price price)
    {
        if (_previousPrices.TryGetValue(price.Symbol, out var prev))
        {
            if (price.Value > prev) return "text-success";
            if (price.Value < prev) return "text-danger";
        }
        return "";
    }

    public void Dispose()
    {
        _ = StopStreamingAsync();
    }
}
